<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/senderpfp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/sendercardview"
        android:src="@drawable/gigachad"
        app:civ_border="false" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        app:strokeColor="@color/fblue"
        android:layout_centerVertical="true"
        app:cardCornerRadius="20dp"
        android:id="@+id/sendercardview"
        android:maxWidth="300dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/senderpfp"
        app:strokeWidth="1dp"
        android:layout_height="wrap_content">
        <androidx.emoji.widget.EmojiTextView
            android:maxWidth="250dp"
            android:id="@+id/showmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:text="adnnfjkakfdnjkfadnkjfd"
            android:layout_toEndOf="@+id/senderpfp"
            android:fontFamily="@font/hnmed"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>